{
  "name": "budpay",
  "version": "1.0.1",
  "description": "Budpay for WooCommerce",
  "main": "index.js",
  "repository": {
		"type": "git",
		"url": "https://github.com/BudPay-Org/budpay-woo-commerce-plugin.git"
	},
  "scripts": {
    "postinstall": "composer install",
    "prebuild": "pnpm install && composer install",
    "build": " pnpm run preuglify && pnpm run uglify && composer run makepot && pnpm run build:webpack && pnpm run plugin-zip",
    "build:webpack": "wp-scripts build",
    "start": "pnpm run start:webpack",
    "start:webpack": "rimraf build/* && wp-scripts start",
    "preuglify": "rm -f $pnpm_package_config_assets_js_min",
    "uglify": "for f in $pnpm_package_config_assets_js_js; do file=${f%.js}; node_modules/.bin/uglifyjs $f -c -m > $file.min.js; done",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format": "wp-scripts format",
    "plugin-zip": "wp-scripts plugin-zip",
    "wp-env": "wp-env",
    "prepare": "husky",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js"
  },
  "lint-staged": {
    "*.js": [
      "wp-scripts lint-js"
    ],
    "*.php": [
      "composer run lint"
    ],
    "*.scss": [
      "wp-scripts lint-style"
    ]
  },
  "config": {
    "wp_org_slug": "budpay",
    "assets": {
      "js": {
        "min": "assets/js/*.min.js",
        "js": "assets/js/*.js"
      },
      "styles": {
        "css": "assets/css/*.css",
        "sass": "assets/css/*.scss",
        "cssfolder": "assets/css/"
      }
    }
  },
  "author": "Budpay Devs",
  "license": "ISC",
  "files": [
    "assets",
    "i18n",
    "build",
    "languages",
    "inc",
    "budpay.php",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "changelog.txt",
    "readme.txt"
  ],
  "devDependencies": {
    "@automattic/color-studio": "^2.6.0",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@formatjs/icu-messageformat-parser": "^2.7.6",
    "@svgr/cli": "^8.1.0",
    "@woocommerce/dependency-extraction-webpack-plugin": "^2.2.0",
    "@woocommerce/eslint-plugin": "^2.2.0",
    "@wordpress/env": "^9.8.0",
    "@wordpress/prettier-config": "^3.13.0",
    "@wordpress/scripts": "^27.7.0",
    "babel-loader": "^9.1.3",
    "classnames": "^2.5.1",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.1",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "jshint": "^2.13.6",
    "mini-css-extract-plugin": "^2.9.0",
    "rimraf": "^5.0.5",
    "sass": "^1.75.0",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "uglify-js": "^3.17.4",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "wp-textdomain": "^1.0.1"
  },
  "dependencies": {
    "@automattic/interpolate-components": "^1.2.1",
    "@mantine/core": "^7.8.1",
    "@wordpress/icons": "^9.47.0",
    "crypto-js": "^4.2.0"
  }
}
